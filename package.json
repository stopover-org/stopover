{
  "devDependencies": {
    "eslint": "^8.20.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  },
  "lint-staged": {
    "app/{components,pages,lib,stories}/**/*.{js,jsx,ts,tsx}": [
      "eslint -c app/.eslintrc.js --fix"
    ],
    "graphql/{app,spec}/**/*.rb": [
      "bash ./lint_graphql.sh"
    ]
  },
  "scripts": {
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
